{
    "name": "nkf/example-api-client",
    "description": "Клиент для работы с example.com",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Vasiliy Nikiforov",
            "email": "kaktusv6@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "ExampleApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "php-cs-fixer": [
            "./vendor/bin/php-cs-fixer fix --rules=@Symfony:risky"
        ]
    }
}
